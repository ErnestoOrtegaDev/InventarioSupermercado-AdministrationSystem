{
  "compilerOptions": {
    /* Configuraci√≥n Base para Node.js */
    "target": "es2016",
    "module": "commonjs",             
    "rootDir": "./src",               
    "outDir": "./dist",               
    
    /* Interoperabilidad */
    "esModuleInterop": true,          
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
